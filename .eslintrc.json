{
  "env": {
    "browser": true,
    "node": true
  },
  "extends": ["eslint:recommended", "plugin:vue/vue3-recommended"],
  "rules": {
    "semi": ["error", "always"],
    "quotes": ["error", "single"],
    "vue/html-closing-bracket-newline": [
      "error",
      {
        "singleline": "never",
        "multiline": "always"
      }
    ],
    "vue/html-self-closing": [
      "error",
      {
        "html": {
          "void": "always",
          "normal": "never",
          "component": "always"
        },
        "svg": "always",
        "math": "always"
      }
    ],
    "key-spacing": ["error", { "beforeColon": false, "afterColon": true }]
  },
  "vue/max-attributes-per-line": [
    "error",
    {
      "singleline": {
        "max": 3
      },
      "multiline": {
        "max": 2
      }
    }
  ]
}
